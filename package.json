{
  "name": "hololive",
  "version": "1.0.0",
  "description": "Hololive website - Luka Cerrutti, Coderhouse 2021",
  "main": "index.js",
  "scripts": {
    "bootstrap-scss": "node-sass --include-path scss scss/bootstrap/bootstrap.scss css/bootstrap/bootstrap.css",
    "style-scss": "node-sass --include-path scss scss/style.scss css/style.css",
    "index-scss": "node-sass --include-path scss scss/index.scss css/index.css",
	  
    "build-css": "npm run bootstrap-scss && npm run style-scss && npm run index-scss",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "author": "Luka Cerrutti",
  "license": "ISC",
  "devDependencies": {
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.12"
  }
}
